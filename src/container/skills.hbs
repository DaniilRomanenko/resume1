<div>
  {{#with main}}
  <main>
    <section>
      {{> title data='All skills'}}
      <ul>
        {{#each skills}}
        <li>
          {{name}}
          {{#if point includeZero=true}}({{point}}){{/if}}
          {{#if isTop}}(TOP){{/if}}
          {{#unless point includeZero=true }}(Не вивчаемо){{/unless}}
          {{#unless point}}
          {{#if point includeZero=true}}
          (зараз вивчаемо)
          {{/if}}
          {{/unless}}
        </li>
        {{/each}}
      </ul>
    </section>
    <section> <!-- Хоби -->
      {{> title data='My hobbies'}}
      <ul>
        {{#each hobbies}}
        <li>
          {{name}}
          {{#if isMain}}(Головне){{/if}}
        </li>
        {{/each}}
      </ul>
    </section>
  </main>
  {{/with}}
</div>
